pipeline {
    agent any
    stages {
        stage('Install dependencies') {
            steps {
                script {
                    sh 'npm install'
                }
            }
        }
        stage('Unit Test') {
            steps {
                script {
                    sh 'npm test'
                }
            }
        }
        stage('SonarQube Analysis') {
            steps {
                script {
                    // Define the SonarQube scanner tool location
                    def scannerHome = tool 'scanner'

                    // Run SonarQube analysis with the configured environment
                    withSonarQubeEnv {  // Ensure the 'SonarQube' server is configured in Jenkins
                        sh "${scannerHome}/bin/sonar-scanner"
                    }
                }
            }
        }

        stage('Build application') {
            steps {
                script {
                    sh 'npm run build-dev'
                }
            }
        }

        // Building Docker images
        stage('Building images (node and mongo)') {
            steps{
                script {
                    sh('docker-compose build')
                }
            }
        }

    }
}
